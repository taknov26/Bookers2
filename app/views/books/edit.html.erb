<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local:true do |f| %>
      <%= render 'books/error_messages', book: f.object %>
      <p>本のタイトル</p>
        <%= f.text_field :title %>
      <p>感想</p>
        <%= f.text_area :body %>
      <p>
        <%= f.submit 'Update Book' %>
      </p>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
