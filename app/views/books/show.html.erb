  <h1>Book detail</h1>
    <table>
      <thead>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <td><%= link_to @book.user do %>
          <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"60x60" %>
          </br><%= @book.user.name %>
          <% end %> </td>
        <td><%= link_to @book do %>
            <%= @book.title %>
            <% end %></td>
        <td><%= @book.opinion %></td>
        <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Delete", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
        <% end %>
      </tbody>
    </table>