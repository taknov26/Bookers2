   <%= render 'books/list', book: @book, user: @user %>

  <h1>Book detail</h1>
    <table>
      <thead>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
        <td><%= link_to @book_find.user do %>
          <%= attachment_image_tag @book_find.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"60x60" %>
          </br><%= @book_find.user.name %>
          <% end %> </td>
        <td><%= link_to @book_find do %>
            <%= @book_find.title %>
            <% end %></td>
        <td><%= @book_find.opinion %></td>
        <% if @book_find.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Delete", book_path, method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
        <% end %>
      </tbody>
    </table>