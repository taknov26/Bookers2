  <h2>User info</h2>
    <div class="profile-image">
    <%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"100x100" %>
    </div>

    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
    </table>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集ロゴ", edit_user_path(@user) %></p>
    <% else %>
    <p><%= link_to "プロフィール編集ロゴ", user_path(current_user.id) %></p>
    <% end %>


<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
<%= render 'books/error_messages', book: f.object %>
<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

