
  <h2>User info</h2>
    <div class="profile-image">
    <%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"100x100" %>
    </div>

    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>名前</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>自己紹介文</th>
          <th><%= user.introduction %></th>
        </tr>
    </table>

    <div class="row">
      <div class="btn-wrapper col-12 mx-auto">
        <p><%= link_to edit_user_path(user), class:'btn btn-outline-secondary btn-sm btn-block', method: :get do %>
          <i class="fas fa-user-cog"></i>
           <% end %>
        </p>
      </div>
    </div>



<h2 class="mt-3">New book</h2>
<%= form_with model:book, local:true do |f| %>
<%= render 'books/error_messages', book: f.object %>
<h4>本のタイトル</h4>
  <%= f.text_field :title %>
<h4>感想</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

