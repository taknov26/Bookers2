  <h1>User info</h1>
  <div class="profile-container">
    <div class="profile-image">
    <%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"100x100" %>
    </div>

    <div class="profile-name">name
    <span><%= @user.name %></span>
    </div>

    <div class="profile-intro">introduction
    <span><%= @user.introduction %></span>
    </div>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集ロゴ", edit_user_path(@user) %></p>
    <% else %>
    <p><%= link_to "プロフィール編集ロゴ", user_path(current_user.id) %></p>
    <% end %>
  </div>

<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<%= render 'books/error_messages', book: f.object %>
<h4>Title</h4>
  <%= f.text_field :title %>
<h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>