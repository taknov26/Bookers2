<div class="container">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', book: @book, user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <th>image</th>
            <th>name</th>
            <th colspan="1"></th>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <td><%= attachment_image_tag user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"60x60" %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>