  <h1>User info</h1>
  <div class="profile-container">
    <div class="profile-image">
    <%= attachment_image_tag @user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"100x100" %>
    </div>

    <div class="profile-name">name
    <span><%= @user.name %></span>
    </div>

    <div class="profile-intro">introduction
    <span><%= @user.introduction %></span>
    </div>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集ロゴ", edit_user_path(@user) %></p>
    <% else %>
    <p><%= link_to "プロフィール編集ロゴ", user_path(current_user.id) %></p>
    <% end %>
  </div>

  <h1>Books</h1>
    <table>
      <thead>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </thead>
      <tbody>
      <% @books.each do |book| %>
          <td><%= link_to book.user do %>
            <%= attachment_image_tag book.user, :profile_image, format:'jpeg', fallback: "no_image.jpg", size:"60x60" %>
            <% end %>
          </td>
          <td><%= link_to book do %>
            <%= book.title %>
            <% end %></td>
          <td><%= book.opinion %></td>
      </tbody>
      <% end %>
    </table>